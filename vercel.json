{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/health",
      "dest": "api/index.js"
    },
    {
      "src": "/",
      "dest": "api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "30 9 * * *"
    },
    {
      "path": "/api/cron/scrape",
      "schedule": "30 14 * * *"
    },
    {
      "path": "/api/cron/scrape",
      "schedule": "0 21 * * *"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 300
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}

